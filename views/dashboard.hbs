<div class="row">
    <h6>Dashboard</h6>
    <h3>Welcome, {{name}}</h3>

    {{#if stories}}

        <p>Here are your stories:</p>

        <div class="table-responsive">
            <table class="table table-striped table-bordered mt-4">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th class="text-center">Date</th>
                        <th class="text-center">Status</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each stories}}
                        <tr>
                            <td><a href="/stories/{{_id}}">{{title}}</a></td>
                            <td>{{formatDate createdAt "MMMM Do YYYY, h:mm A"}}</td>
                            <td class="text-center">{{{getStatusBadge status}}}</td>
                            <td></td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>

    {{else}}
        <p class="text-muted">You have not created any stories</p>
    {{/if}}

</div>

<div class="container d-flex flex-row-reverse">
    {{> _add_btn}}
</div>